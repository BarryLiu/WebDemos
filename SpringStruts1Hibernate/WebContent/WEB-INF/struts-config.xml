<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd" >
<struts-config>
	<action-mappings>
		<!-- 当Struts框架接受到一个请求，路径与path对应上了，找谁处理 -->
		<!-- 根据path到Spring上下文找对应 的Bean的name -->
		<action path="/firmAction" parameter="method" >
			<forward name="listEmp" path="/listEmp.jsp"></forward>
			<forward name="addEmp" path="/addEmp.jsp"></forward>
			<forward name="modifyEmp" path="/modifyEmp.jsp"></forward>
			
			<forward name="listDept" path="/listDept.jsp"></forward>
			<forward name="addDept" path="/addDept.jsp"></forward>
		</action>
	</action-mappings>

	<!-- 让Spring托管Action的生命周期 -->
	<controller processorClass="org.springframework.web.struts.DelegatingRequestProcessor"></controller>
</struts-config>
